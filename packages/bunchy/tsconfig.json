{
    "compilerOptions": {
        "allowImportingTsExtensions": true,
        "baseUrl": "./",
        "esModuleInterop": true,
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ES2023"
        ],
        "jsx": "react-jsx",
        "jsxImportSource": "preact",
        "module": "esnext",
        "moduleResolution": "bundler",
        "noEmit": true,
        "paths": {
            "@/*": ["./*"],
            "@garage44/common/*": ["../common/*"]
        },
        "skipLibCheck": true,
        "sourceMap": true,
        "target": "ES2023",
        "types": ["bun", "node"]
    }
}